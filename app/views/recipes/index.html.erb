<h1>CookBook</h1>
<p>Bem-vindo ao maior livro de receitas online</p>

<% if user_signed_in? %>
<p><%= link_to "Logout", destroy_user_session_path, method: :delete %></p>
<% else %>
<p><%= link_to "Fazer Login", new_user_session_path %></p>
<p><%= link_to "Criar novo usuÃ¡rio", new_user_registration_path %></p>
<% end %>

<%= form_with(url: "/search", method: "get", local:true) do %>
  <%= label_tag(:search, "Buscar pelo nome da receita") %>
  <%= text_field_tag(:search) %>
  <%= submit_tag("Buscar") %>
<% end %>

<%= render partial: 'recipe', collection: @recipes %>

<h1><%= link_to 'Enviar tipo de receita', new_recipe_type_path %></h1>

<% @recipe_types.each do |types| %>
  <h3><%= link_to types.name, types %></h3>
<% end %>