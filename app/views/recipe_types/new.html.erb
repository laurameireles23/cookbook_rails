<h1>Cadastrar novos tipos de receita</h1>
<% if @recipe_type.errors.any? %>
    <% @recipe_type.errors.each do |attr, message| %>
        <p><%= message %></p>
    <% end %>
<% end %>

<%= form_with model: @recipe_type, local: true do |r| %>
    <%= r.label :name, 'Nome' %> 
    <%= r.text_field :name %>

    <%= r.submit 'Enviar' %>
<% end %>